<%= page_heading "subject areas" %>
<h1>Subject Areas</h1>


<p> List of all subject areas </p>

<%= link_to 'Add new subject area', new_subject_area_path, class: "btn btn-primary" %>

<br>
<br>
<%= will_paginate @subject_areas, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th> Course Name </th>
      <th>Number Of sub areas</th>
      <th colspan="3"> </th>

    </tr>
  </thead>

  <tbody>
    <% @subject_areas.each do |subject_area| %>
      <tr>
        <td style="transform: rotate(0);width:75%;" ><%=link_to subject_area.name, subject_area, class: "table_key_cell stretched-link" %></td>
        <td><p><%= pluralize(subject_area.subject_sub_areas.size, 'sub area') %> </p></td>
        <td ><div class="btn-group" role="group"><%= link_to 'Edit', edit_subject_area_path(subject_area), class: "btn btn-outline-warning" %><%= link_to 'Delete', subject_area, method: :delete, data: { confirm: "Are you sure you want to delete #{subject_area.name}?" }, class: "btn btn-outline-danger" %></div></td>
      </tr>
    <% end %>

  </tbody>
</table>


<%= will_paginate @courses, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

