<%= page_heading "subject area::#{@subject_area.name}" %>

<h4><%= @subject_area.name %></h4>

<% if current_user.admin %>
<%= link_to 'Change subject area name', edit_subject_area_path(@subject_area) %> |
<%= link_to 'Delete this subject area', @subject_area, method: :delete, data: { confirm: "Are you sure you want to delete #{@subject_area.name}?" }, class:"link-danger" %>
<br>
<% end %>
<%= link_to 'Back to all subject areas', subject_areas_path %>

<% if @subject_sub_areas.any? %>
  <p> Sub areas of this Subject: </p>
  <%= render 'subject_sub_areas/list_of_subject_sub_areas'  %>

<% end %>

<%= link_to "Back", :back%>
