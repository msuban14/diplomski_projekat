<table class="table">
  <thead>
    <tr>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr class="answer-<%= answer.isCorrect %>">
        <td style="transform: rotate(0);width:90%;" ><%=link_to answer.content, answer, class:"table_key_cell stretched-link" %></td>
        <td><div class="btn-group" role="group">
            <%= link_to 'Edit', edit_answer_path(answer), class:"btn btn-warning" %>
            <% if current_user.admin %>
              <%= link_to 'Delete', answer, method: :delete, data: { confirm: 'Are you sure you want to delete this answer?' }, class:"btn btn-danger" %>
            <% end %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
