
<%= simple_form_for(@lecture) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :week %>
    <%= f.association :course %>

    <%= f.label "Subject sub areas", class:"form-label"%>
    <div class="border border-1">
    <%= f.collection_check_boxes :subject_sub_area_ids,  SubjectSubArea.all, :id, :name, {:multiple => true,  checked: @lecture.subject_sub_areas.map(&:id) } do |check|%>
      <div class="form-check ">
        <%= check.check_box(class: "form-check-input") %> <%= check.label(class:"form-check-label") %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
