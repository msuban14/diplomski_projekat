<%= page_heading "Tags" %>

<h1>Tags</h1>
<%= link_to 'New Tag', new_tag_path, class:"btn btn-primary" %>
<br><br>
<small>Table of tags, and their association, please click on tag name for more info:</small>
<%= will_paginate @tags, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Tag</th>
      <th> Sub Areas </th>
      <th> Questions </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td style="transform:rotate(0);width:60%"><%= link_to tag.name, tag ,class:"table_key_cell stretched-link"%></td>
        <td> <%= tag.subject_sub_areas.size %>        </td>
        <td> <%= tag.questions.size %>        </td>
        <td><div class="btn-group" role="group">
            <%= link_to 'Edit', edit_tag_path(tag),class:"btn btn-outline-warning" %>
            <%= link_to 'Destroy', tag, method: :delete, data: { confirm: "Are you sure you want to delete #{tag.name}?" }, class:"btn btn-outline-danger" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @tags, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

<br>

<%= link_to 'New Tag', new_tag_path, class:"btn btn-primary" %>
