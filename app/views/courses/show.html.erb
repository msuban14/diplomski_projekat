<%= page_heading "course::#{@course.name}" %>

<h4><%= @course.name %></h4>
<% if current_user.admin %>
<%= link_to 'Change course name', edit_course_path(@course) %> |
<%= link_to 'Delete this course', @course, method: :delete, data: { confirm: "Are you sure you want to delete #{@course.name}?" }, class:"link-danger" %>
 <br>
 <% end %>
<%= link_to 'Back to all courses', courses_path %>

<% if @lectures.any? %>
  <p> Lectures associated to this course: </p>
  <%= render 'lectures/list_of_lectures'  %>

<% end %>
