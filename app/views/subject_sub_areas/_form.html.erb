
<%= simple_form_for(@subject_sub_area) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :subject_area %>

    <%= f.label "Lectures", class:"form-label"%>
    <div class="border border-1">
    <%= f.collection_check_boxes :lecture_ids,  Lecture.all, :id, :name, {:multiple => true,  checked: @subject_sub_area.lectures.map(&:id) } do |check|%>
      <div class="form-check ">
        <%= check.check_box(class: "form-check-input") %> <%= check.label(class:"form-check-label") %>
      </div>
    <% end %>
    </div>

    <%= f.label "Tags", class:"form-label"%>
    <div class="border border-1">
    <%= f.collection_check_boxes :tag_ids,  Tag.all, :id, :name, {:multiple => true,  checked: @subject_sub_area.tags.map(&:id) } do |check|%>
      <div class="form-check ">
        <%= check.check_box(class: "form-check-input") %> <%= check.label(class:"form-check-label") %>
      </div>
    <% end %>
    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
