
<%= will_paginate @questions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th> Content</th>
      <th> Question type </th>
      <th> Question difficulty </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @questions.each do |question| %>
  <tr>
    <td style="transform: rotate(0);"><%=link_to question.content, question, class:"table_key_cell stretched-link" %></td>
    <td style="transform: rotate(0);"><%=link_to question.question_type.name, question, class:"table_key_cell stretched-link" %></td>

    <td style="transform: rotate(0);"><%=link_to question.question_difficulty.name, question, class:"table_key_cell stretched-link" %></td>
    <td ><div class="btn-group" role="group"><%= link_to 'Edit', edit_question_path(question), class: "btn btn-outline-warning" %><%= link_to 'Delete', question, method: :delete, data: { confirm: "Are you sure you want to delete question id:#{question.id}?" }, class: "btn btn-outline-danger" %></div></td>
  </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @questions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
