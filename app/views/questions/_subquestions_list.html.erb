<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Question</th>
      <th>  </th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td style="transform: rotate(0);width:48%;"><%=link_to question.content, question, class:"table_key_cell stretched-link" %></td>
        <td><p>---></p></td>
        <td style="transform: rotate(0);width:48%;"><%=link_to question.answers[0].content, question.answers[0], class:"table_key_cell stretched-link" %></td>

        <td><div class="btn-group" role="group">
              <%= link_to 'Edit', edit_question_path(question), class:"btn btn-outline-warning" %>
              <%= link_to 'Delete', question, method: :delete, data: { confirm: "Are you sure you want to delete question id:#{question.id}?" }, class:"btn btn-outline-danger" %>
            </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
